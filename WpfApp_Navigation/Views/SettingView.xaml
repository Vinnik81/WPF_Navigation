        </UniformGrid>
        <UniformGrid Height="50" DockPanel.Dock="Top" Rows="1" Columns="2">
            <Label Margin="5" FontSize="20" DockPanel.Dock="Top">Enter your Name</Label>
            <TextBox Margin="5" Padding="2" FontSize="25"></TextBox>
        </UniformGrid>
        <UniformGrid Height="50" DockPanel.Dock="Top" Rows="1" Columns="2">
            <Label Margin="5" FontSize="20" DockPanel.Dock="Top">Enter your Name</Label>
            <TextBox Margin="5" Padding="2" FontSize="25"></TextBox>
        </UniformGrid>
        <UniformGrid Height="50" DockPanel.Dock="Top" Rows="1" Columns="2">
            <Label Margin="5" FontSize="20" DockPanel.Dock="Top">Enter your Name</Label>
            <TextBox Margin="5" Padding="2" FontSize="25"></TextBox>
        </UniformGrid>
        <UniformGrid Height="25" Rows="1" Columns="2" DockPanel.Dock="Bottom">
            <Button FontSize="15">Save</Button>
            <Button FontSize="15">Cancel</Button>
        </UniformGrid>
    </DockPanel>
</UserControl>
